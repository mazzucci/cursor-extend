[project]
name = "{{ tool_name }}"
version = "0.1.0"
description = "{{ description }}"
requires-python = ">=3.10"
dependencies = [
    "fastmcp>=2.0.0",
{%- for dep in extra_dependencies %}
    "{{ dep }}",
{%- endfor %}
]

[project.scripts]
{{ script_name }} = "server:main"

[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[tool.hatch.build.targets.wheel]
only-include = ["server.py"]
